      "program": "${workspaceFolder}/udpserver",
      "args": ["--seed", "61061"],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
    },
    {// (Windows) Launch
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/udpserver.exe",
      "args": ["-seed","123"],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false
  }
]
