  "version": "0.2.0",
  "configurations": [
    { //(Unix/macOS) Debug clientandserver
      "name": "(Unix/macOS) Debug clientandserver",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/clientandserver",
      "args": [
        "--seed",
        "610"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
    },
    { //(Win) Launch clientandserver
      "name": "(Win) Launch clientandserver",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/clientandserver.exe",
      "args": [
        "-seed",
        "123"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false
    }
  ]
}